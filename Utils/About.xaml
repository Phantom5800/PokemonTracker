<Window x:Class="PokemonTracker.Utils.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonTracker.Utils"
        mc:Ignorable="d"
        Background="DarkGray"
        WindowStyle="ToolWindow"
        Title="About" Height="500" Width="580" ResizeMode="NoResize">
    <Grid>
        <DockPanel Margin="10,10,10,10">
            <StackPanel DockPanel.Dock="Top" Background="White">
                <TextBlock x:Name="Controls" Margin="5,5,5,5" Height="125" TextWrapping="Wrap"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Top" Margin="0,10,0,0" Background="White">
                <TextBlock x:Name="Disclosure" Margin="5,5,5,5" Height="125" TextWrapping="Wrap"/>
            </StackPanel>
            <ScrollViewer DockPanel.Dock="Top" Margin="0,10,0,0" Height="200" Background="White">
                <TextBlock x:Name="MIT" Margin="5,5,5,5"/>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
